{
  "entities": {
    "Transaction": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Transaction",
      "type": "object",
      "description": "Representa uma transação financeira, seja uma receita ou uma despesa.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Identificador único para a transação."
        },
        "userId": {
          "type": "string",
          "description": "ID do usuário que criou a transação."
        },
        "descricao": {
          "type": "string",
          "description": "Descrição da transação (ex: 'Salário', 'Aluguel')."
        },
        "valor": {
          "type": "number",
          "description": "O valor da transação."
        },
        "tipo": {
          "type": "string",
          "description": "Tipo de transação: 'receita' ou 'despesa'.",
          "enum": ["receita", "despesa"]
        },
        "data": {
          "type": "string",
          "format": "date-time",
          "description": "Data e hora da transação."
        },
        "groupId": {
            "type": "string",
            "description": "ID do grupo ao qual a despesa pertence (opcional)."
        }
      },
      "required": ["userId", "descricao", "valor", "tipo", "data"]
    },
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "description": "Representa um usuário da aplicação.",
      "type": "object",
      "properties": {
         "id": {
          "type": "string",
          "description": "O ID único do usuário, correspondente ao UID do Firebase Auth."
        }
      },
      "required": ["id"]
    },
    "Group": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Group",
        "description": "Representa um grupo de despesas criado pelo usuário.",
        "type": "object",
        "properties": {
            "id": {
                "type": "string",
                "description": "O ID único do grupo."
            },
            "userId": {
                "type": "string",
                "description": "ID do usuário que criou o grupo."
            },
            "name": {
                "type": "string",
                "description": "Nome do grupo (ex: 'Mercado', 'Transporte')."
            }
        },
        "required": ["userId", "name"]
    }
  },
  "auth": {
    "providers": ["email-password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Armazena informações do perfil do usuário."
        }
      },
      {
        "path": "users/{userId}/transactions/{transactionId}",
        "definition": {
          "entityName": "Transaction",
          "schema": { "$ref": "#/backend/entities/Transaction" },
          "description": "Armazena as transações financeiras de um usuário específico como uma subcoleção."
        }
      },
      {
        "path": "users/{userId}/groups/{groupId}",
        "definition": {
            "entityName": "Group",
            "schema": { "$ref": "#/backend/entities/Group" },
            "description": "Armazena os grupos de despesas de um usuário."
        }
      }
    ]
  }
}
