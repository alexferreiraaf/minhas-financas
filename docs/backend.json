{
  "entities": {
    "Transaction": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Transaction",
      "type": "object",
      "description": "Representa uma transação financeira, seja uma receita ou uma despesa.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Identificador único para a transação."
        },
        "userId": {
          "type": "string",
          "description": "ID do usuário que criou a transação."
        },
        "descricao": {
          "type": "string",
          "description": "Descrição da transação (ex: 'Salário', 'Aluguel')."
        },
        "valor": {
          "type": "number",
          "description": "O valor da transação."
        },
        "tipo": {
          "type": "string",
          "description": "Tipo de transação: 'receita' ou 'despesa'.",
          "enum": ["receita", "despesa"]
        },
        "data": {
          "type": "string",
          "format": "date-time",
          "description": "Data e hora da transação."
        }
      },
      "required": ["userId", "descricao", "valor", "tipo", "data"]
    },
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "description": "Representa um usuário da aplicação.",
      "type": "object",
      "properties": {
         "id": {
          "type": "string",
          "description": "O ID único do usuário, correspondente ao UID do Firebase Auth."
        }
      },
      "required": ["id"]
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Armazena informações do perfil do usuário."
        }
      },
      {
        "path": "users/{userId}/transactions/{transactionId}",
        "definition": {
          "entityName": "Transaction",
          "schema": { "$ref": "#/backend/entities/Transaction" },
          "description": "Armazena as transações financeiras de um usuário específico como uma subcoleção."
        }
      }
    ]
  }
}
